@page "{accountId:int?}"
@model Basics.Pages.Accounts.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editting Account: @Model.Account.Name @Model.Account.Lastname</h2>
    
<form method="post">
    <input type="hidden" asp-for="Account.Id" />
    <div class="form-group">
        <label asp-for="Account.Name"></label>
        <input asp-for="Account.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Account.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Account.Lastname"></label>
        <input asp-for="Account.Lastname" class="form-control" />
        <span class="text-danger" asp-validation-for="Account.Lastname"></span>
    </div>
    <div class="form-group">
        <label asp-for="Account.Age"></label>
        <input asp-for="Account.Age" class="form-control" />
        <span class="text-danger" asp-validation-for="Account.Age"></span>
    </div>
    <div class="form-group">
        <label asp-for="Account.Citizenship"></label>
        <input asp-for="Account.Citizenship" class="form-control" />
        <span class="text-danger" asp-validation-for="Account.Citizenship"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>